<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg"
    tools:context=".IntroActivity1">

    <ImageView
        android:id="@+id/acnes_face"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/acnes_face" />

    <TextView
        android:id="@+id/sentence1_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you suffering from Acne?"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/sentence2_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to stay away"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/sentence3_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from harmful chemicals?"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/sentence4_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using ComsoSafety and"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/sentence5_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get product information"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/sentence6_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recommendations and ratings"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/continue_btn_intro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"

        android:text="Continue >"/>

</LinearLayout>