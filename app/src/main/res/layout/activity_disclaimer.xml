<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisclaimerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f39520"
        android:text="Important!"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:textAlignment="center"
        android:textSize="35dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="CosmoSafety helps to suggest you product that are generally safe for the people with similar condition."
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="Cosmetic products are constantly being reformulated, so chemicals and allergens may change."
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="You should never rely solely on the information you see in the application."
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text= "Please confirm you have understood and agree with these Terms of Use before using the application."
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btn_disclaim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        android:text= "I AGREE!"
        android:textSize="50dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        />


</LinearLayout>