<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity2">

    <LinearLayout

        android:orientation="vertical"
        android:background="@color/colorBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/red_hair"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/red_hair" />

        <TextView
            android:id="@+id/sentence1_intro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up to CosmoSafety to be Safe and Beautiful"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            />


        <Button
            android:id="@+id/continue_btn_intro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="Continue >"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>